{
    "name": "nacara-root",
    "private": "true",
    "license": "Apache-2.0",
    "scripts": {
        "postinstall": "dotnet tool restore",
        "clean": "shx rm -rf dist",
        "nacara": "fable-splitter -c src/Nacara/splitter.config.js",
        "nacara-watch": "fable-splitter -c src/Nacara/splitter.config.js --watch",
        "layouts-standard": "fable-splitter -c src/Layouts/Standard/splitter.config.js",
        "layouts-standard-watch": "fable-splitter -c src/Layouts/Standard/splitter.config.js --watch",
        "watch-nacara-layout": "dotnet fable src/Layouts/Standard --outDir src/Layouts/Standard/fableBuild --watch --sourceMaps",
        "watch-nacara-fable": "dotnet fable src/Nacara/Source --outDir src/Nacara/fableBuild --watch --sourceMaps",
        "watch-nacara-daemon": "npx nodemon --watch src/Nacara/fableBuild --watch src/Layouts/Standard/fableBuild --watch nacara.config.js --delay 150ms --exec \"npx nacara --watch\"",
        "watch": "concurrently -p none 'npm:watch-*'",
        "build": "yarn nacara && yarn layouts-standard"
    },
    "devDependencies": {
        "concurrently": "^6.1.0",
        "nodemon": "^2.0.7",
        "shx": "^0.3.3"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=7.13.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.3",
        "bulma": "^0.9.2",
        "bulma-switch": "^2.0.0",
        "esm": "^3.2.25"
    }
}
