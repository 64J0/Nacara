{
    "name": "nacara-root",
    "private": "true",
    "license": "Apache-2.0",
    "scripts": {
        "postinstall-nacara-layout-npm": "cd src/Layouts/Standard && npm i",
        "postinstall-nacara-npm": "cd src/Nacara && npm i",
        "postinstall-dotnet": "dotnet tool restore",
        "postinstall": "concurrently -p non 'npm:postinstall-*' && node scripts/setup-dev.js",
        "setup-dev": "node scripts/setup-dev.js",
        "unsetup-dev": "node scripts/unsetup-dev.js",
        "clean-nacara-layouts-fable": "shx rm -rf src/Layouts/Standard/dist && shx rm -rf src/Layouts/Standard/bin && shx rm -rf src/Layouts/Standard/obj",
        "clean-nacara": "shx rm -rf src/Nacara/dist && shx rm -rf src/Nacara/Source/bin && shx rm -rf src/Nacara/Source/obj",
        "clean-docs": "shx rm -rf temp",
        "clean": "concurrently -p none 'npm:clean-*'",
        "watch-nacara-layout-fable": "dotnet fable src/Layouts/Standard --outDir src/Layouts/Standard/dist --watch --sourceMaps",
        "watch-nacara-fable": "dotnet fable src/Nacara/Source --outDir src/Nacara/dist --watch --sourceMaps",
        "watch-nacara-daemon": "npx nodemon --watch src/Nacara/dist --watch src/Layouts/Standard/dist --watch nacara.config.js --delay 150ms --exec \"nacara --watch --verbose\"",
        "prewatch": "npm run clean && shx mkdir src/Nacara/dist && shx mkdir src/Layouts/Standard/dist",
        "watch": "concurrently -p none 'npm:watch-*-fable' 'npm:watch-nacara-daemon'",
        "build-nacara-fable": "dotnet fable src/Nacara/Source --outDir src/Nacara/dist",
        "build-nacara-layout-fable": "dotnet fable src/Layouts/Standard --outDir src/Layouts/Standard/dist",
        "prebuild": "npm run clean",
        "build": "concurrently -p none 'npm:build-*'",
        "pregenerate-docs": "npm run build",
        "generate-docs": "nacara",
        "release-nacara-layout-standard-npm": "node ./scripts/release-npm.js src/Nacara",
        "release-nacara-npm": "node ./scripts/release-npm.js src/Layouts/Standard",
        "prerelease": "npm run build",
        "release": "npm run release-nacara-npm && npm run release-nacara-layout-standard-npm"
    },
    "devDependencies": {
        "concurrently": "^6.1.0",
        "nodemon": "^2.0.7",
        "rollup": "^2.51.1",
        "rollup-plugin-node-externals": "^2.2.0",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-visualizer": "^5.5.0",
        "shelljs": "^0.8.4",
        "shx": "^0.3.3"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=7.13.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.3",
        "bulma": "^0.9.2",
        "bulma-switch": "^2.0.0"
    }
}
