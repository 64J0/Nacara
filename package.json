{
    "name": "nacara-root",
    "private": "true",
    "license": "Apache-2.0",
    "scripts": {
        "postinstall-nacara-layout-npm": "cd src/Layouts/Standard && npm i",
        "postinstall-nacara-npm": "cd src/Nacara && npm i",
        "postinstall-dotnet": "dotnet tool restore",
        "postinstall": "concurrently -p non 'npm:postinstall-*' && node scripts/setup-dev.js",
        "setup-dev": "node scripts/setup-dev.js",
        "unsetup-dev": "node scripts/unsetup-dev.js",
        "clean-nacara-layouts-fable": "shx rm -rf src/Layouts/Standard/fableBuild && shx rm -rf src/Layouts/Standard/bin && shx rm -rf src/Layouts/Standard/obj",
        "clean-nacara": "shx rm -rf src/Nacara/fableBuild && shx rm -rf src/Nacara/Source/bin && shx rm -rf src/Nacara/Source/obj",
        "clean-docs": "shx rm -rf temp",
        "clean": "concurrently -p none 'npm:clean-*'",
        "watch-nacara-layout": "dotnet fable src/Layouts/Standard --outDir src/Layouts/Standard/fableBuild --watch --sourceMaps",
        "watch-nacara-fable": "dotnet fable src/Nacara/Source --outDir src/Nacara/fableBuild --watch --sourceMaps",
        "watch-nacara-daemon": "npx nodemon --watch src/Nacara/fableBuild --watch src/Layouts/Standard/fableBuild --watch nacara.config.js --delay 150ms --exec \"npx nacara --watch\"",
        "watch": "concurrently -p none 'npm:watch-*'",
        "build": "yarn nacara && yarn layouts-standard"
    },
    "devDependencies": {
        "concurrently": "^6.1.0",
        "nodemon": "^2.0.7",
        "shelljs": "^0.8.4",
        "shx": "^0.3.3"
    },
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=7.13.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.3",
        "bulma": "^0.9.2",
        "bulma-switch": "^2.0.0"
    }
}
